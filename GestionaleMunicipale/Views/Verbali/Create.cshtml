        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDAnagrafica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDAnagrafica, new SelectList(ViewBag.Anagrafiche, "Value", "Text"), "Seleziona Anagrafica", new { @class = "form-control" }),
                @Html.ValidationMessageFor(model => model.IDAnagrafica, "", new { @class = "text-danger" })
            </div>
        </div>

