@{
    ViewBag.Title = "Home Page";
}
@using Municipale




<main class="my-5">
    <div class="my-3">


    </div>
    <div class="container fs-3 ">

        <div class=" my-5 g-3 align-items-center container-fluid">
            <div class="card text-bg-primary mb-3 " >
                <div class="card-header"><h2 class="fw-bold">Verbali</h2></div>
                <div class="card-body">

                    @Html.ActionLink("Lista Verbali", "Index", "Verbali", "", new { @class = "nav-link" })
                    @Html.ActionLink("Aggiungi un verbale", "Create", "Verbali", "", new { @class = "nav-link" })
                </div>
            </div>


            <div class="col d-flex flex-column">
                <div class="card text-bg-primary mb-3 " >
                    <div class="card-header"> <h2 class="fw-bold">Anagrafiche</h2></div>
                    <div class="card-body">
                        @Html.ActionLink("Anagrafiche", "Index", "Anagrafica", "", new { @class = "nav-link" })
                        @Html.ActionLink("Aggiungi anagrafica", "Create", "Anagrafica", "", new { @class = "nav-link" })

                    </div>
                </div>

                <div class="col d-flex flex-column">
                    <div class="card text-bg-primary mb-3 ">
                        <div class="card-header"><h2 class="fw-bold">Violazioni</h2></div>
                        <div class="card-body">
                            @Html.ActionLink("Anagrafiche", "Index", "TipoViolazione", "", new { @class = "nav-link" })
                            @Html.ActionLink("Aggiungi violazione", "Create", "TipoViolazione", "", new { @class = "nav-link" })

                        </div>
                    </div>

                    <div class="col d-flex flex-column">
                        <div class="card text-bg-primary mb-3 ">
                            <div class="card-header"><h2 class="fw-bold">Filtra Risultati</h2></div>
                            <div class="card-body">
                                @Html.ActionLink("Verbali divisi per anagrafica", "filterAnagrafica", "Verbali", "", new { @class = "nav-link" })
                                @Html.ActionLink("Punti decurtati divisi per anagrafica", "filterPuntiAnagrafica", "Verbali", "", new { @class = "nav-link" })
                                @Html.ActionLink("Verbali con più di 10 punti decurtati", "filterVerbaliPunti", "Verbali", "", new { @class = "nav-link" })
                                @Html.ActionLink("Verbali di importo superiore a € 400", "filterImporto", "Verbali", "", new { @class = "nav-link" })

                            </div>
                        </div>


                    </div>
                </div>
                </div>

            </div>
            </div>












</main>