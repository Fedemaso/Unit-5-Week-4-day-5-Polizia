@model IEnumerable<Municipale.Models.Anagrafica>
@using Municipale

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Aggiungi anagrafica", "Create", "Anagrafica", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead class="table-primary">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDAnagrafica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indirizzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CAP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Fisc)
            </th>

        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr class="table-primary fw-bold">
                <td>
                    @Html.DisplayFor(modelItem => item.IDAnagrafica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Indirizzo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CAP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cod_Fisc)
                </td>

            </tr>
        }
    </tbody>

</table>
